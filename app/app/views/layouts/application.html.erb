<!DOCTYPE html>
<html>
  <head>
    <title>CryptoWallet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    params[:controller], media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag params[:controller], 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div class="container-fluid">
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <%= link_to t('links.home'), root_path, class:"nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to 'PortuguÃªs', root_path(locale: 'pt-BR'), class:"nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to 'English', root_path(locale: 'en'), class:"nav-link"%>
        </li>
        <li class="nav-item">
          <% if signed_in? %>
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class:"nav-link"%>
          <% else %>
            <%= link_to 'Sign In', new_user_session_path, class:"nav-link"%>
          <% end %>
        </li>
      </ul>
      <%= yield %>
    </div>
  </body>
</html>
