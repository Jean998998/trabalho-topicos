<% if signed_in? %>
  <div class="jumbotron">
    <h1 class="display-4"><%= t('welcome') %></h1>
    <p class="lead"><%= t('messages.start') %></p>
    <hr class="my-4">
    <p><%= t('messages.buttons') %></p>
    <%= link_to "#{Coin.model_name.human(count: 2)}", coins_path, class:"btn btn-primary btn-lg", role:"button" %>
    <%= link_to "#{MiningType.model_name.human(count: 2)}", mining_types_path, class:"btn btn-primary btn-lg", role:"button" %>
  </div>
<% else %>
  <div class="jumbotron">
    <h1 class="display-4"><%= t('welcome') %></h1>
    <p class="lead"><%= t('messages.login') %></p>
    <hr class="my-4">
    <%= link_to "Sign In", new_user_session_path, class:"btn btn-primary btn-lg", role:"button" %>
  </div>
<% end %>